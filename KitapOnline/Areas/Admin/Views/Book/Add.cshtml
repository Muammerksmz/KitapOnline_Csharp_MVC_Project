@model KitapOnline.Models.Domain.Book
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Kitap Ekleme</h3>
            <form asp-action="Add" asp-area="Admin" method="post">
                <div class="form-group">
                    <label asp-for="Title">Kitap adı *</label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GenreId">Kitap türü *</label>
                    <select asp-for="GenreId" asp-items="Model.GenreList" class="form-control">
                        <option value="">--seçiniz--</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Isbn">Kitap adeti *</label>
                    <input type="text" class="form-control" asp-for="Isbn" />
                    <span asp-validation-for="Isbn" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TotalPages">Kitap Sayfası *</label>
                    <input type="number" class="form-control" asp-for="TotalPages" />
                    <span asp-validation-for="TotalPages" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="AuthorId">Kitap Yazarı *</label>
                    <select asp-for="AuthorId" asp-items="Model.AuthorList" class="form-control">
                        <option value="">--seçiniz--</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title">Kitap yayımcısı *</label>
                    <select asp-for="PubhlisherId" asp-items="Model.PublisherList" class="form-control">
                        <option value="">--seçiniz--</option>
                    </select>
                    <span asp-validation-for="PubhlisherId" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Kaydet</button>
                    <a href="/Admin/Book/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>Listele</a>
                </div>

            </form>
        </div>
    </div>
</div>

