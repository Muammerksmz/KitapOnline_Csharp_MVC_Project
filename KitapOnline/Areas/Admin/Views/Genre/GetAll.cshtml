@model IEnumerable<KitapOnline.Models.Domain.Genre>
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Admin/Genre/Add">Daha fazla ekle</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Kitap Türleri</h3>

            <table id="genreTable" class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Tür adı</th>
                        <th>Seçenekler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-success" href="/Admin/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i> Düzenle</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Emin misiniz?')" href="/Admin/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i> Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    let table = new DataTable("#genreTable");
</script>

